<Window x:Class="GameOfThrones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfThrones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://www.socialsamosa.com/wp-content/uploads/2016/06/got.jpg"/>
        </Grid.Background>
        <TextBox x:Name="txtQuote" HorizontalAlignment="Left" Height="84" Margin="224,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="382" Background="{x:Null}" Foreground="White"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="31" Margin="10,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" Background="{x:Null}" Foreground="White"/>
        <Button x:Name="btn1" Content="Get Quote" HorizontalAlignment="Left" Height="84" Margin="649,312,0,0" VerticalAlignment="Top" Width="133" Click="btn1_Click" Background="{x:Null}" Foreground="#FFFBF7F7"/>

    </Grid>
</Window>
